<pyvcp>

<!-- Spindle 0 -->
 <labelframe text="Spindle">
    <font>("Helvetica",12)</font>  

	<!-- rpm -->
    <hbox>
        <label>
            <text>"RPM     "</text>
        </label>
		<number> 
			<halpin>"spindle.0-speed"</halpin>
			<font>("Helvetica",14)</font>  
			<format>"+4.3f"</format>
		</number>
	</hbox>

	<!-- enabled status -->
    <hbox>
        <label>
            <text>"Enabled "</text>
        </label>
        <led>
            <halpin>"spindle.0-enabled"</halpin>
            <size>15</size>
            <on_color>"green"</on_color>
            <off_color>"red"</off_color>
        </led>
    </hbox>
</labelframe>

<!-- Rosette Phaser/Multiplier -->
<labelframe text="Rosette Phaser/Multiplier">
    <font>("Helvetica",12)</font>  

	<!-- rpm -->
    <hbox>
        <label>
            <text>"RPM     "</text>
        </label>
		<number> 
			<halpin>"spindle.1-speed"</halpin>
			<font>("Helvetica",14)</font>  
			<format>"+4.3f"</format>
		</number>
	</hbox>

	<!-- enabled status -->
    <hbox>
        <label>
            <text>"Enabled "</text>
        </label>
        <led>
            <halpin>"spindle.1-enabled"</halpin>
            <size>15</size>
            <on_color>"green"</on_color>
            <off_color>"red"</off_color>
        </led>
    </hbox>
</labelframe>

<labelframe text="Axes">
    <font>("Helvetica",16)</font>  
    <vbox>
        <hbox>
<!-- 
            <checkbutton>
                <halpin>"axis-x-enableset"</halpin>
