            </checkbutton>
 -->
            <button>
                <halpin>"axis-x-enableset"</halpin>
                <text>"X Axis"</text>
            </button>
            <led>
                <halpin>"axis-x-enable"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
        </hbox>
        <hbox>
            <led>
                <halpin>"axis-y-enabled"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
            <label>
                <text>"Y Enabled"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"axis-z-enabled"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
            <label>
                <text>"Z Enabled"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"axis-b-enabled"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
            <label>
                <text>"B Enabled"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"axis-u-enabled"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
            <label>
                <text>"U Enabled"</text>
            </label>
        </hbox>
        <hbox>
            <led>
                <halpin>"axis-v-enabled"</halpin>
                <size>15</size>
                <on_color>"green"</on_color>
                <off_color>"red"</off_color>
            </led>
            <label>
                <text>"V Enabled"</text>
            </label>
        </hbox>
    </vbox>
</labelframe>
